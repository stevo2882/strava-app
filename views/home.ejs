<%- include ("partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to imWatching</h1>
			<p>Fuck movies to your shelf</p>
			<p>
				<a class="btn btn-primary btn-large" href="/library">View My Shelf</a>
			</p>
		</div>
	</header>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<%activities.forEach(function(activity){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<!-- <img src="<%= activity["name"] %>" class="img-fluid"> -->
					<div class="caption">
						<h4><%= activity["name"] %></h4>
					</div>
					<p>
						<a href="/activity/<%= activity["id"] %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>
<%- include("partials/footer") %>
