<%- include ("partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
		<p class="lead">ImWatching</p>
		 <form action="/library/<%=movie.imdbid%>" method="POST">
         	<div class="form-group">
				<button class="btn btn-primary">Add to Libray</button>
			</div>
        </form>
	</div>
		<div class="col-md-9">
			<div class"thumbnail">
				<img class="img-responsive" src="<%= movie.poster %>">
				<div class="caption-full">
					<h4><a><%= movie.title %></a></h4>
					<p><%= movie.plot %></p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<p>
						<a class="btn btn-success" href="/movie/<%= movie._id %>/comments/new">Add New Review</a>
					</p>
				</div>
				<hr>
				<% movie.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>
<%- include("partials/footer") %>